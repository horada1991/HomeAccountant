<Window x:Class="HomeAccountant.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeAccountant"
        mc:Ignorable="d"
        Title="LogInWindow" Height="221.893" Width="236.095">
    <Grid>
        <Button x:Name="LogInBtn" Content="Log in" HorizontalAlignment="Left" Margin="80,104,0,0" VerticalAlignment="Top" Width="75" Click="LogInBtn_Click"/>
        <TextBox x:Name="UserNameTB" HorizontalAlignment="Left" Height="23" Margin="57,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.509,0.519"/>
        <Label x:Name="UserNameLabel" Content="Username:" HorizontalAlignment="Left" Margin="57,45,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.357,-3.519"/>
        <Label x:Name="ErrorMessageLabel" Content="" HorizontalAlignment="Left" Margin="10,141,0,0" VerticalAlignment="Top" FontSize="16" Width="210" Height="43" FontWeight="Bold" FontStyle="Italic"/>

    </Grid>
</Window>
